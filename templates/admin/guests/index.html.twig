{% extends 'admin.html.twig' %}

{% block admin %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>GUESTS</h1>
        <a href="{{ path('admin_guest_add') }}" class="btn btn-primary">Ajouter</a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>
                    <a href="{{ path('admin_guest_update', {id: user.id}) }}" class="btn btn-warning">Modifier</a>
                    <a href="{{ path('admin_guest_delete', {id: user.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}